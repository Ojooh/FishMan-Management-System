<% include includes/head %>

    <body>
        <% include includes/topbar %>
        <div class="container-fluid">
            <div class="row">
                <% include includes/sidebar %>

                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                        <h1 class="h2">Restock</h1>
                    </div>
                    
                    <div class="table-responsive h-50 mb-5">
                        <form action="">
                    
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">Type <i class="fa fa-ellipsis-v fa-lg fa-pull-right my-2" role="button"
                                                data-bs-toggle="dropdown"></i>
                    
                                            <ul class="dropdown-menu">
                                                <li><a class=" dropdown-item" href="#" data-bs-toggle="modal"
                                                        data-bs-target="#editTypeModal">Edit type</a></li>
                                                <li><a class="dropdown-item" href="#">Deactivate</a></li>
                                                <li>
                                                    <hr class="dropdown-divider">
                                                </li>
                                                <li><a class="dropdown-item" href="#">Delete type</a></li>
                    
                                            </ul>
                                        </th>
                                        <th scope="col">Product</th>
                                        <th scope="col" class="dropdown">Details
                                            <i class="fa fa-ellipsis-v fa-lg fa-pull-right my-2" role="button"
                                                data-bs-toggle="dropdown"></i>
                    
                                            <ul class="dropdown-menu">
                                                <li><a class=" dropdown-item" href="#" data-bs-toggle="modal"
                                                        data-bs-target="#editProductModal">Edit product</a></li>
                                                <li><a class="dropdown-item" href="#">Deactivate</a></li>
                                                <li>
                                                    <hr class="dropdown-divider">
                                                </li>
                                                <li><a class="dropdown-item" href="#">Delete product</a></li>
                                            </ul>
                    
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="border-top-0">
                                    <tr>
                                        <td colspan="1" class="p-0">
                                            <table class="table">
                                                <tr data-bs-toggle="modal" data-bs-target="#typeModal">
                                                    <td class="text-primary" role="button"><i class="fa fa-add me-3"></i>
                                                        Add New</td>
                                                </tr>
                                        <% if (types && types.length > 0 ) { %>
                                            <% for( var ty=0; ty < types.length; ty++) { %>
                                                <tr>
                                                    <!-- table-active -->
                                                    <td class="type-row" data-id="<%= types[ty].id %>" data-name="<%= types[ty].name %>" scope="col">
                                                        <%= types[ty].name %> <i class="fa fa-chevron-right float-end"></i>
                                                    </td>
                                                </tr>
                                            <% } %>
                                        <% }  else { %>
                                            <tr>
                                                <td class="alert alert-danger text-danger" scope="col">
                                                    No Type Data Available
                                                </td>
                                            </tr>
                                        <% } %>
                                            </table>
                                        </td>
                    
                                        <td colspan="1" class="p-0">
                                            <table class="table">
                                                <tr data-bs-toggle="modal" data-bs-target="#productModal">
                                                    <td class="text-primary" role="button"><i class="fa fa-add me-3"></i>
                                                        Add New</td>
                                                </tr>
                                                <% if (prods && prods.length> 0 ) { %>
                                                    <% for( var p=0; p < prods.length; p++) { %>
                                                        <tr class="product product-type-<%= prods[p].type %> deactivated">
                                                                <td class="product-row" scope="col">
                                                                    <%= prods[p].name %> <i class="fa fa-chevron-right float-end"></i>
                                                                </td>
                                                        </tr>
                                                        <% } %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td class="alert alert-danger text-danger prd" scope="col">
                                                                No Product Data Available
                                                            </td>
                                                        </tr>
                                                    <% } %>
                                                
                                            </table>
                                        </td>
                    
                                        <td colspan="1" class="p-0">
                                            <table class="table">
                    
                                                <tr>
                                                    <td scope="col" class="border-0">
                                                        <ul class="list-group">
                                                            <li class="list-group-item">Image: <img
                                                                    src="https://via.placeholder.com/300/09f/fff.png" height="100"
                                                                    width="100" class="img-thumbnail" alt="">
                                                            </li>
                                                            <li class="list-group-item">Price: 6,500</li>
                                                            <li class="list-group-item">Quantity: 20</li>
                                                            <li class="list-group-item">Size: 20kg</li>
                                                        </ul>
                                                    </td>
                                                </tr>
                    
                                                <tr>
                                                    <td scope="col">
                                                        <a data-bs-toggle="collapse" href="#collapseExample" role="button"
                                                            class="text-decoration-none text-black" aria-expanded="false"
                                                            aria-controls="collapseExample">
                                                            <b>Logs</b>
                                                            <i class="fa fa-chevron-down float-end"></i>
                                                        </a>
                    
                                                        <div class="collapse mt-3" id="collapseExample">
                                                            <table class="table table-bordered table-light table-sm">
                                                                <thead>
                                                                    <tr>
                                                                        <th scope="col">#</th>
                                                                        <th scope="col">Date</th>
                                                                        <th scope="col">Qty</th>
                                                                        <th scope="col">Size(kg)</th>
                                                                        <th scope="col">Price(&#8358;)</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <tr>
                                                                        <th scope="row">1</th>
                                                                        <td>03/02/2020</td>
                                                                        <td>540</td>
                                                                        <td>23</td>
                                                                        <td>5000</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <th scope="row">2</th>
                                                                        <td>03/02/2020</td>
                                                                        <td>540</td>
                                                                        <td>23</td>
                                                                        <td>5000</td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </td>
                                                </tr>
                    
                    
                                            </table>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                    
                        </form>
                    </div>
                    
                    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                        <h1 class="h2">Inventory</h1>
                    </div>
                    
                    <div>
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Type</th>
                                    <th scope="col">Price (&#8358;)</th>
                                    <th scope="col">Qty</th>
                                    <th scope="col">Size (kg)</th>
                                    <th scope="col">Avbl. Vault</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">1</th>
                                    <td>Tilapia</td>
                                    <td>Fish</td>
                                    <td>5000</td>
                                    <td>430</td>
                                    <td>20</td>
                                    <td>300</td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>Jacob</td>
                                    <td>Thornton</td>
                                    <td>@fat</td>
                                    <td>Mark</td>
                                    <td>Otto</td>
                                    <td>@mdo</td>
                                </tr>
                                <tr>
                                    <th scope="row">3</th>
                                    <td>Larry the Bird</td>
                                    <td>@twitter</td>
                                    <td>Mark</td>
                                    <td>Otto</td>
                                    <td>@mdo</td>
                                    <td>Otto</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </main>

                <% include includes/typeModal %>
                <% include includes/productModal %>

            </div>
        </div>
        
    <script src="/js/custom/main.js"></script>
    <script type="module" src="/js/custom/validator.js"></script>
    <script type="module" src="/js/custom/helper.js"></script>
    <script type="module" src="/js/custom/script_2.js"></script>
            
            
    </body>
    </html>